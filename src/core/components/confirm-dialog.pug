#confirm-dialog.modal.fade(tabindex='-1', role='dialog')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span ×
          span.sr-only 关闭
        h4.modal-title(data-bind='text:title')
      .modal-body
        div(data-bind='html:message')
      .modal-footer
        button.btn.btn-default(type='button' data-bind='text:declineCaption, click:decline')
        button.btn.btn-primary(type='button' data-bind='text:acceptCaption, click:accept') 
